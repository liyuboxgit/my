<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="liyu.test.security.dao.PositionMapper"> 
    <sql id="tn">security_position</sql>
    <sql id="columns">name,pid,departMentId</sql>
        
    <insert id="add" useGeneratedKeys="true" keyProperty="id">
       	insert into <include refid="tn"/> (<include refid="columns"/>) values
       	(#{name},#{pid},#{departMentId})
    </insert>
 	
 	<select id="get" resultType="Position">
 		select id,<include refid="columns"/> from <include refid="tn"/>
 		where id=#{id}
 	</select>
</mapper>