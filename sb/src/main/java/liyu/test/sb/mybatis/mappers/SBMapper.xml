<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="liyu.test.sb.mybatis.entity.SB">
    <resultMap type="liyu.test.sb.mybatis.entity.SB" id="BaseResultMap"></resultMap>
    <sql id="cols">
        birth as birth,name as name,price as price,sex_type as sex_type,id as id
    </sql>
    <sql id="whereSql">
        <where>
            <if test="id != null">
                and id=#{id}
            </if>
            <if test="birth != null">
                and birth=#{birth}
            </if>
            <if test="name != null">
                and name=#{name}
            </if>
            <if test="price != null">
                and price=#{price}
            </if>
            <if test="sex_type != null">
                and sex_type=#{sex_type}
            </if>
        </where>
    </sql>
    <sql id="pageSql">
        <if test="pageNo!=null and pageSize!=null">
            limit #{pageNo},#{pageSize}
        </if>
    </sql>
    <insert id="insert">
        insert into t_sb(birth,name,price,sex_type) values(#{birth},#{name},#{price},#{sex_type})
    </insert>
    <update id="merge">
        update t_sb set birth=#{birth},name=#{name},price=#{price},sex_type=#{sex_type} where id=#{id}
    </update>
    <update id="dynamicUpdate">
        update ${tableName} set ${columnName}=#{value} where id = #{primaryKey}
    </update>
    <delete id="delete">
        delete from t_sb where id=#{id}
    </delete>
    <delete id="deleteBatch" parameterType="java.util.List">
        <foreach collection="list" item="item" index="index" open="begin" close=";end;" separator=";">
            delete from t_sb where id=#{item.id}
        </foreach>
    </delete>
    <select id="findone" resultMap="BaseResultMap">
        select <include refid="cols"/> from t_sb where id=#{id}
    </select>
    <select id="findlist" resultMap="BaseResultMap">
        select <include refid="cols"/> from t_sb <include refid="whereSql"/> <include refid="pageSql"/>
    </select>
    <select id="findcount" resultType="java.lang.Long">
        select count(1) from t_sb <include refid="whereSql"/>
    </select>
</mapper>